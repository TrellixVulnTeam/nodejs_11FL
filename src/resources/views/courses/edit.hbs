<div class='mt-4'>
    <h1>Edit Course</h1>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
        <div class="form-group">
            <label for="name">Name course</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>